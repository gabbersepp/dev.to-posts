{
  "name": "dev.to",
  "repository": {
    "type": "git",
    "url": "https://github.com/YOUR-USERNAME/YOUR-REPO.git"
  },
  "scripts": {
    "prettier": "prettier",
    "embedme": "embedme blog-posts/**/*.md",
    "prettier:base": "prettier \"**/*.{js,json,scss,md,ts,html,component.html}\"",
    "prettier:write": "prettier \"**/*.{js,json,scss,md,ts,html,component.html}\" --write",
    "prettier:check": "prettier \"**/*.{js,json,scss,md,ts,html,component.html}\" --list-different",
    "embedme:check": "embedme blog-posts/**/*.md --verify",
    "embedme:write": "embedme",
    "dev-to-git": "dev-to-git"
  },
  "dependencies": {
    "dev-to-git": "1.4.10",
    "embedme": "1.22.1",
    "prettier": "3.2.5"
  }
}
